#pragma kernel PaintWaves

RWTexture2D<float4> _Result;

float2 _PaintUV;
float _RadiusUV;

[numthreads(8,8,1)]
void PaintWaves(uint3 id : SV_DispatchThreadID)
{
	float2 dim;
	{
		_Result.GetDimensions(dim.x, dim.y);
	}

	float2 uv = (id.xy + 0.5) / dim;

	float paint = smoothstep(_RadiusUV, 0.0, length(uv - _PaintUV));
	_Result[id.xy] += 0.01 * paint;
}
